
<div class="panel panel-primary panel-transparent">
  <div class="panel-heading">
    <h3 class="panel-title">Hello Admin --- Overview of Pairs for the day!</h3>
    <button type="button" class="btn btn-default"><%= link_to "Random generate new couples", generator_path, method: :get %></button>
    <table class="table">
      <li><%= @couples %></li>
    </table>
  </div>
    <div class="panel-heading">
      <h3 class="panel-title">True = Student & False = Admin</h3>
    </div>

<div class="container" >
  <table class="table">
    <% @users.each do |user| %>
      <li>
        <%= user.full_name %> - <%= user.email %>
    </li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Change user role <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Promote", promote_path(user.id), method: :put %></li>
          <li class="divider"></li>
          <li><%= link_to "Demote", demote_path(user.id), method: :put %></li>
        </ul>
    </li>
      <%= user.student %>
    <% end %>
  </table>
</div>
